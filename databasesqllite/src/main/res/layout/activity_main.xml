<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use DataBase"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

    <EditText
            android:id="@+id/dbNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="데이터 베이스 이름을 입력"
            android:textSize="20dp" />
    <Button
            android:id="@+id/btnCreateDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create DataBase"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/tbNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="테이블 명을 입력"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btnCreateTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Table"
        android:layout_gravity="center_horizontal" />
    <Button
        android:id="@+id/btninsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Insert Record"
        android:textColor="#00f"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Change Record"
        android:textColor="#00f"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btndelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delete Record"
        android:textColor="#00f"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Check Result :"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        />


</LinearLayout>
